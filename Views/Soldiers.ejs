<link rel="stylesheet" href="../public/css/SoliderProfiles.css" />
</head>
<body style="background-color: rgb(12, 12, 12);">
    <%- include('./includes/navigation.ejs') %>
</li>
<h1 style="color: white;">Soliders</h1>
<div class="soldier-info">

    
        <a class="exit-btn" href="/soldiers/"><div class="inner-circle"></div></a>
        <% for(let i=0;i<soldiersResults.length; i++) { %>
            <% result = soldiersResults[i]; %>
            <% if(result.soldier_id === U_id){ %>
                <% for(let i=0;i<exercisesLength; i++) { %>
                    <% exercise = exerciseObjs[i]; %>
                        <% if(exercise.id == result.exercise_id){ %>
                            <h1 style="text-align:center;">
                                <%= exercise.Name %> : <%= result.grade %>
                            </h1>
                            <% } %>
                        <% } %>
                    <% } else if(i==1 && U_id == "") { %>
                        <h1 style="text-align:center;position:relative; top:30%; left: 0% " >לחץ על  חייל</h1>
                        <% } %>
                        
                        <% } %>
                
                                


                

    </div>
<div  class = "scrolling-area">

    <div class= "scrolling-element-inside">
    <% for(let i=0; i < Object.keys(soldierProfiles).length; i++) { %>
        <% soldier = soldierProfiles[i]; %>
        
        <a id="<%= soldier.U_id %>" class="<%= U_id === soldier.U_id ? 'active-soldier-btn' : 'soldier-btn' %>" href="/soldiers/<%= soldier.U_id %>">
                <header class="card__header">
                    <article >
                    <h1 class="soldierName soldier-text" style="position: absolute; right: 2em; display:inline;">שם: <%= soldier.Name %></h1>
                    <h1 class="U_id soldier-text"><%= soldier.U_id %> : מספר אישי</h1>
                    <h1 class="Force_id" style="position: absolute; right: 2em; display:inline; top:3.2em;"><%= soldier.Force_id %>: כיתה</h1>
                    <h1 class="id" style="position: absolute; top:3.2em">ID: <%= soldier.id %></h1>
                    </article>
                </header>
            </a>


                    <% } %>
                </div>
            </div>
        </div>
    </div>  
    
</div>
